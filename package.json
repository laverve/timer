        "@storybook/addon-links": "^7.4.1",
        "@storybook/addon-storysource": "^7.4.1",
        "@storybook/addon-styling-webpack": "^1.0.0",
        "@storybook/api": "^7.4.1",
        "@storybook/cli": "^7.4.1",
        "@storybook/csf-plugin": "^7.4.1",
        "@storybook/react-webpack5": "^7.4.1",
        "@storybook/theming": "^7.4.1",
        "@types/react": "^18.3.12",
        "browserslist": "^4.24.2",
        "copyfiles": "^2.4.1",
        "husky": "^9.1.6",
        "lint-staged": "^15.1.0",
        "prettier": "^3.0.3",
        "rimraf": "^6.0.1",
        "snapshot-diff": "^0.10.0",
